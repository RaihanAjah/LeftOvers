<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FAFAFA"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/layoutShopCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_rounded"
        android:orientation="horizontal"
        android:padding="4sp">

        <ImageView
            android:id="@+id/ivProfileShop"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20sp"
            android:background="@drawable/ic_baseline_credit_card_24" />

        <LinearLayout
            android:id="@+id/layoutShopDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVoucherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#080A1A"
                android:textSize="16sp"
                android:text="Voucher Belanja"
                android:layout_marginBottom="8sp"/>

            <TextView
                android:id="@+id/tvJlmhPotongan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/abuGelap"
                android:textSize="12sp"
                android:text="Potongan belanja Rp10.000"
                android:layout_marginBottom="4sp"/>

            <TextView
                android:id="@+id/tvMinPembelian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/abuGelap"
                android:textSize="10sp"
                android:text="min. pembelian 20.000"
                android:layout_marginBottom="8sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Klaim"
                android:textSize="12sp"
                android:textColor="#fafafa"
                android:layout_gravity="right"
                android:layout_marginBottom="4sp"
                android:layout_marginEnd="4sp"
                android:background="@drawable/custom_button_biru"/>




        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>
