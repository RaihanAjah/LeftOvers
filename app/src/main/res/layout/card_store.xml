<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FAFAFA"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/layoutShopCard"
        android:layout_width="match_parent"
        android:layout_height="98sp"
        android:background="@drawable/list_rounded"
        android:orientation="horizontal"
        android:padding="4sp">

        <ImageView
            android:id="@+id/ivProfileShop"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/list_rounded"/>

        <LinearLayout
            android:id="@+id/layoutShopDesc"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="match_parent"
                android:layout_height="21sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#080A1A"
                android:textSize="18sp"
                android:layout_marginBottom="8sp"/>

            <TextView
                android:id="@+id/tvShopAddress"
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#51525D"
                android:textSize="14sp"
                android:layout_marginBottom="12sp"/>

            <LinearLayout
                android:id="@+id/layoutRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivRating"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/ic_baseline_star_rate_24"
                    android:layout_marginRight="8sp"/>

                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="match_parent"
                    android:layout_height="16sp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#51525D"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>
