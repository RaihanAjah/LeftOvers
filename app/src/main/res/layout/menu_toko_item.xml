<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="fKePembayaran"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFotoMenuToko"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/abu"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaMenuToko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama makanan"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/tvDeskripsiMenuToko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan makanan"
                    android:textSize="16sp"
                    android:textColor="@color/abu"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHargaMenuToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <TextView
                        android:id="@+id/tvTanggalProduksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvIdTokoMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="idToko"
                    android:visibility="invisible" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>